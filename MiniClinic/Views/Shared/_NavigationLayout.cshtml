<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </li>
    @if (Context.User.Identity.Name != null)
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="SecurePage">Dashboard</a>
        </li>
        var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
        @if (User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value == "Admin")
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Registration">Add a User</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Patient" asp-action="Create">Add a Patient</a>
            </li>
        }
    }
</ul>

<ul class="navbar-nav ms-auto">
    @if (Context.User.Identity.Name != null)
    {
        <li class="nav-item">
            <form asp-controller="Account" asp-action="LogOut" method="post" id="logoutForm" class="d-inline nav-link">
                <button type="submit" class="btn btn-dark btn-sm" style="height:100%">Log Out</button>
            </form>
        </li>
        <li class="nav-item">
            <span class="btn btn-outline-dark btn-sm" style="height: 100%">Hello, @Context.User.Identity.Name</span>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Log in here!</a>
        </li>
    }
</ul>
